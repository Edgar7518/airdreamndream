<div class="head">

    <div class="container py-5">
      <div class="row">
        <div class="col-12 col-md-6 offset-lg-3">
          <div class="bg-white rounded p-3 shadow">
            <h2><strong>Ajouter votre rêve</strong></h2>
            <%= simple_form_for @dream do |f| %>
              <%= f.input :name, placeholder: 'Nom de votre rêve' %>
              <%# <%= f.input :photo, as: :file %>
              <%= f.input :description, placeholder: 'Décrivez votre rêve' %>
              <%= f.input :price, placeholder: 'Le prix de votre rêve' %>
              <%= f.input :duration, placeholder: 'Durée de votre rêve '%>
              <%=f.association :category%>
              <%= f.input :photo, as: :file %>
              <input class="btn btn-primary" type="submit" value="Soumettre">
              <%= link_to 'Retour', dreams_path, class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      </div>
  </div>
</div>
