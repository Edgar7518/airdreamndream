<h3>New Dream</h3>
<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Create a new Dream</h3>
        <%= simple_form_for @dream do |f| %>
          <%= f.input :name, placeholder: 'Name of your Dream' %>
          <%# <%= f.input :photo, as: :file %>
           <%= f.input :description, placeholder: 'Describe your Dream' %>
           <%= f.input :price, placeholder: 'The cost for your Dream' %>
           <%= f.input :duration, placeholder: 'Duration of your dream' %>
          <%=f.association :category%>
          <input class="btn btn-primary" type="submit" value="Submit">
          <%= link_to 'Back', dreams_path %>
        <% end %>
      </div>
    </div>
  </div>
</div>
