        <% dreamThree = @dreams.find_by(id:129) %>
    <div class="col">
      <div class="card rounded">
        <div class="card">

         <%= dream.photo.attached? ? cl_image_tag(dream.photo.key, width: 350, height: 200, crop: :fill, class:"card-img-top")  : image_tag("https://images.unsplash.com/photo-1536893827774-411e1dc7c902?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=464&q=80")%></div>
          <div class="text">
            <p>
              <strong>Catégorie:</strong>
              <%= dream.category.name %>
            </p>
            <p>
              <strong>Titre:</strong>
              <%= dream.name %>
            </p>
            <p>
              <strong>Prix:</strong>
              <%= dream.price%> $
            </p>
          </div>

        <%= link_to "Détails", dream, class:"btn btn-primary" %>
      </div>
    </div>

    <div class="col">
